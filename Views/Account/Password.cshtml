@model PasswordDto
@{
}
<!--Password Page-->
<!--Title-->
<div class="mx-auto rounded border p-4" style="width: 500px">
    <h2 class="text-center mb-3">Edit Password</h2>
    <hr />
    <!--display error and success messages from the view that were sent to the viewbag-->
    @if (ViewBag.ErrorMessage != null)
    {
        <!--display error message into bootstrap alert of type danger-->
        <div class='alert alert-danger alert-dissmissible fade show' role='alert'>
            <strong>@ViewBag.ErrorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }
    else if (ViewBag.SuccessMessage != null)
    {
        <!--if success then display in bootstrap alert of type success-->
        <div class='alert alert-success alert-dismissible fade show' role='alert'>
            <strong>@ViewBag.SuccessMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }
    <!--Form-->
      <!--Password action handles the post request-->
    <form method="post">
        <!--Current Password-->
        <div class="row mb-2">
            <label class="col-sm-4 col-form-label">Current Password</label>
            <div class="col-sm-8">
                  <!--Input field that is bounnd to the current password property of the password DTO model-->
                <input class="form-control" type="password" asp-for="CurrentPassword" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
        </div>
        <!--New Password-->
        <div class="row mb-2">
            <label class="col-sm-4 col-form-label">New Password</label>
            <div class="col-sm-8">
                <input class="form-control" type="password" asp-for="NewPassword" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <!--Confirm Password-->
        <div class="row mb-2">
            <label class="col-sm-4 col-form-label">Current Password</label>
            <div class="col-sm-8">
                <input class="form-control" type="password" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <!--Submit and Cancel buttons-->
        <div class="row">
            <div class="offset-sm-4 col d-grid">
                    <!--Post request happens upon submit-->
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col d-grid">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Profile">Cancel</a>
            </div>
        </div>
    </form>

</div>